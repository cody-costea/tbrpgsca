<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BattleActivity" >
    
    <TextView
        android:id="@+id/SkillCost"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_toRightOf="@+id/ButtonsLayer"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/AutoRunLayer"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/AutoRunLayer" 
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        >
        
        <Button
            android:id="@+id/AutoBt"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="45dp"
            android:layout_height="0dp"
            android:layout_weight="1"            
            android:text="@string/bt_auto" />
        
        <Button
	        android:id="@+id/RunBt"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="45dp"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:text="@string/bt_run" />
        
    </LinearLayout>

     <TextView
         android:id="@+id/ItemCost"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_below="@+id/ImgEnemy2"
         android:layout_toRightOf="@+id/ButtonsLayer"
         android:layout_toLeftOf="@+id/AutoRunLayer"
         android:gravity="bottom"
         android:maxLines="30"
         android:scrollbars="vertical"
         android:textAppearance="?android:attr/textAppearanceSmall" />

     <ImageView
         android:id="@+id/ImgPlayer4"
         android:layout_width="178dp"
         android:layout_height="178dp"
         android:layout_below="@+id/ImgPlayer1"
         android:layout_toRightOf="@+id/ImgPlayer2" />

     <ImageView
         android:id="@+id/ImgPlayer1"
         android:layout_width="178dp"
         android:layout_height="178dp"
         android:layout_toRightOf="@+id/ImgPlayer3"
         android:layout_marginTop="37dp"
         android:layout_alignParentTop="true" />
     
     <LinearLayout
        android:id="@+id/ButtonsLayer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/SkillBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/ActBt"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/bt_act" />

        <Spinner
            android:id="@+id/TargetBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        
        <Button
            android:id="@+id/UseBt"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/bt_use" />

        <Spinner
            android:id="@+id/ItemBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        
    </LinearLayout>

     <ImageView
         android:id="@+id/ImgPlayer3"
         android:layout_width="178dp"
         android:layout_height="178dp"
         android:layout_alignParentTop="true"
         android:layout_toRightOf="@+id/ButtonsLayer"/>

     <ImageView
         android:id="@+id/ImgPlayer2"
         android:layout_width="178dp"
         android:layout_height="178dp"
         android:layout_below="@+id/ImgPlayer3"
         android:layout_toRightOf="@+id/ButtonsLayer"
         android:layout_marginLeft="17dp" />

     <ImageView
         android:id="@+id/ImgEnemy2"
         android:layout_width="178dp"
         android:layout_height="178dp"
         android:layout_below="@+id/ImgEnemy3"
         android:layout_toLeftOf="@+id/ImgEnemy4" />

     <ImageView
         android:id="@+id/ImgEnemy3"
         android:layout_width="178dp"
         android:layout_height="178dp"
         android:layout_alignParentTop="true"
         android:layout_toLeftOf="@+id/ImgEnemy1" />

     <ImageView
         android:id="@+id/ImgEnemy4"
         android:layout_width="178dp"
         android:layout_height="178dp"
         android:layout_toLeftOf="@+id/AutoRunLayer"
         android:layout_below="@+id/ImgEnemy1"
         android:layout_marginRight="17dp" />

     <ImageView
         android:id="@+id/ImgEnemy1"
         android:layout_width="178dp"
         android:layout_height="178dp"
         android:layout_marginTop="37dp"
         android:layout_toLeftOf="@+id/AutoRunLayer" />

</RelativeLayout>