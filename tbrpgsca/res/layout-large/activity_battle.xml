<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BattleActivity" >
    
    <Spinner
        android:id="@+id/ItemBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/UseBt"
        android:layout_below="@+id/ImgEnemy2" />

        <TextView
        android:id="@+id/SkillCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ItemCost"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/AutoBt"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/ItemCost"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/ItemBox"
        android:layout_alignTop="@+id/ItemBox"
        android:layout_toLeftOf="@+id/RunBt"
        android:layout_toRightOf="@+id/ItemBox"
        android:gravity="bottom"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/RunBt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ItemBox"
        android:layout_alignLeft="@+id/AutoBt"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ItemCost"
        android:text="@string/bt_run" />

    <Spinner
        android:id="@+id/SkillBox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TargetBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/AutoBt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SkillBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/bt_auto" />

    <Spinner
        android:id="@+id/TargetBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UseBt"
        android:layout_alignLeft="@+id/SkillBox"
        android:layout_alignRight="@+id/SkillBox"
        android:layout_alignTop="@+id/ActBt"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/ActBt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TargetBox"
        android:layout_below="@+id/ImgPlayer3"
        android:layout_toLeftOf="@+id/ImgPlayer3"
        android:text="@string/bt_act" />

    <Button
        android:id="@+id/UseBt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ItemBox"
        android:layout_alignLeft="@+id/TargetBox"
        android:layout_alignRight="@+id/TargetBox"
        android:text="@string/bt_use" />

    <ImageView
        android:id="@+id/ImgEnemy3"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignTop="@+id/SkillCost"
        android:layout_toLeftOf="@+id/ImgEnemy1" />

    <ImageView
        android:id="@+id/ImgEnemy1"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignTop="@+id/ImgPlayer1"
        android:layout_toLeftOf="@+id/AutoBt" />

    <ImageView
        android:id="@+id/ImgEnemy4"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignRight="@+id/ItemCost"
        android:layout_alignTop="@+id/ImgPlayer4"
        android:layout_marginRight="24dp" />

    <ImageView
        android:id="@+id/ImgEnemy2"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ImgEnemy4" />

    <ImageView
        android:id="@+id/ImgPlayer2"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_above="@+id/ItemCost"
        android:layout_alignLeft="@+id/ImgPlayer3"
        android:layout_marginLeft="27dp" />

    <ImageView
        android:id="@+id/ImgPlayer1"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_above="@+id/ImgPlayer4"
        android:layout_toRightOf="@+id/ImgPlayer2" />

    <ImageView
        android:id="@+id/ImgPlayer4"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignLeft="@+id/ImgPlayer1"
        android:layout_below="@+id/ActBt"
        android:layout_marginLeft="26dp" />

    <ImageView
        android:id="@+id/ImgPlayer3"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_above="@+id/ImgPlayer2"
        android:layout_alignLeft="@+id/SkillCost"
        android:layout_marginLeft="24dp" />

</RelativeLayout>